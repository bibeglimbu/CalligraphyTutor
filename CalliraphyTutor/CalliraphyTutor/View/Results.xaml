                </ItemsControl.ItemsPanel>
                
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        -->
            <!--<Line />-->
            <!--
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>-->
        </Grid>
        <Grid Grid.Row="3">

        </Grid>
    </Grid>
</UserControl>
